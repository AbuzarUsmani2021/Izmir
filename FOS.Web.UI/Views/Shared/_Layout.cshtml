    <script type="text/javascript">
    $(window).load(function () {
        $(".loader").fadeOut("fast");
    })

    var showLoadingEnabled = true;
    var $loading = $('.loader');
    $(document)
      .ajaxStart(function () {
          if (showLoadingEnabled) {
              $loading.show();
          }
      })
      .ajaxStop(function () {
          $loading.hide();
      });


    $.ajax({
        type: "POST",
        url: "@Url.Action("GetCount", "Home")",
            data: {},
            success: function (data) {

                if (data != null) {

                    $(".getCount").html(data);

                }

            }

        });

        setInterval(GetcountPendingRetailer, 20000);



        function GetcountPendingRetailer() {
            window.showLoadingEnabled = false;
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetCount", "Home")",
                data: {},
                success: function (data) {
                    window.showLoadingEnabled = true;
                    if (data != null) {

                        $(".getCount").html(data);

                    }

                }

            });

        }

        function Getcount() {
            $.ajax({
                type: "POST",
                url: "@Url.Action("GetCount", "Home")",
                data: {},
            success: function (data) {
                if (data != null) {

                    $(".getCount").html(data);

                }

            }

        });

        }

        $(document).ready(function () {
            Getcount();
        });
    </script>

